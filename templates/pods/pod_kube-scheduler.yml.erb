apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: <%= @container_image %>
    command:
    - /bin/sh
    - -c
    - /hyperkube scheduler <%= scope.function_template(['kubernetes/_scheduler.erb']) %>
    resources:
      limits:
        cpu: 500m
        memory: 700Mi
      requests:
        cpu: 500m
        memory: 700Mi
    volumeMounts:
    - mountPath: /etc/pki
      name: etcpki
      readOnly: true
    - mountPath: /etc/ssl
      name: etcssl
      readOnly: true
    - mountPath: /etc/kubernetes
      name: etckubernetes
      readOnly: true
  volumes:
  - hostPath:
      path: /etc/pki/
    name: etcpki
  - hostPath:
      path: /etc/ssl
    name: etcssl
  - hostPath:
      path: /etc/kubernetes
    name: etckubernetes
